
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>Index</h2>
<h2>@ViewBag.Message</h2>
   
<body>
    <div>
          Personal Info
    </div>
    <div>
        @using (Html.BeginForm("ManageMarks", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                <label for="default" class="col-sm-2 control-label">Select Faculty<span style="color:red;">*</span></label>
                <div class="col-sm-10">
                    <select name="Faculty" class="form-control" id="select_faculty" required="required">
                        @foreach (PRMS.Models.Faculty faculty in ViewBag.faculties)
                        {
                            @Html.Raw("<option value='" + faculty.ShortForm + "'>" + faculty.FacultyName + "</option>");
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="default" class="col-sm-2 control-label">Select Session<span style="color:red;">*</span></label>
                <div class="col-sm-10">
                    <select name="session" class="form-control" id="select_session" required="required">
                        @{  foreach (PRMS.Models.AllSession session in ViewBag.all_session)
                          {

                            @Html.Raw("<option value='" + session.Session + "'>" + session.Session + "</option>");

                          }
                        }

                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="default" class="col-sm-2 control-label">Select Semester<span style="color:red;">*</span></label>
                <div class="col-sm-10">
                    <select class="form-control" id="select_semester" name="semester" onchange="getCourses()" required="required">
                        <option value="1">1st Semester</option>
                        <option value="2">2nd Semester</option>
                        <option value="3">3rd Semester</option>
                        <option value="4">4th Semester</option>
                        <option value="5">5th Semester</option>
                        <option value="6">6th Semester</option>
                        <option value="7">7th Semester</option>
                        <option value="8">8th Semester</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="default" class="col-sm-2 control-label">Select Course Code<span style="color:red;">*</span></label>
                <div class="col-sm-10">
                    <select name="course_code" class="form-control" id="select_course_code" required="required"></select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Get Excel" />
                </div>
            </div>
        }
    </div>
</body>

<script>
    $(document).ready(function () {

        if ("@ViewBag.Message" != "") {

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["success"]("@ViewBag.Message");

        }     

    });

    $(function () {
        if ("@ViewBag.Message" == "") {

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["success"]("Have a great Day!");
        }
    });

</script>     