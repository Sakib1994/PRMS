
@{
    ViewBag.Title = "ChangeMark";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}


<div class="container-fluid">
    <div class="row page-title-div">
        <div class="col-md-6">
            <h2 class="title">Change Mark</h2>

        </div>

        <!-- /.col-md-6 text-right -->
    </div>
    <!-- /.row -->
    <div class="row breadcrumb-div">
        <div class="col-md-6">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Teacher")"><i class="fa fa-home"></i> Teacher</a></li>

                <li class="active">Change Mark</li>
            </ul>
        </div>

    </div>
    <!-- /.row -->
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h5>Change mark info carefully</h5>
                    </div>
                </div>
                <div class="panel-body">


                    <!--  notification
                    <div class="alert alert-success left-icon-alert" role="alert">
                        <strong>Well done!</strong>
                    </div>
                    <div class="alert alert-danger left-icon-alert" role="alert">
                        <strong>Oh snap!</strong>
                    </div>
                     -->
                    @if(ViewBag.Mark != null)
                    {
                        <form class="form-horizontal" method="post">
                            <input hidden name="course_code" value="@ViewBag.Course_code" />

                            <div class="form-group">
                                <label for="default" class="col-sm-2 control-label">Id</label>
                                <div class="col-sm-6">
                                    <input type="number" name="Id" class="form-control" id="Id" value="@ViewBag.Mark.Id" required="required" autocomplete="off" >
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="default" class="col-sm-2 control-label">Reg</label>
                                <div class="col-sm-6">
                                    <input type="number" name="Reg" class="form-control" id="Reg" value="@ViewBag.Mark.Reg" required="required" autocomplete="off" >
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="default" class="col-sm-2 control-label">Mid</label>
                                <div class="col-sm-6">
                                    <input type="number" name="Mid" class="form-control" id="Mid" value="@ViewBag.Mark.Mid" required="required" autocomplete="off">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="default" class="col-sm-2 control-label">Attendance</label>
                                <div class="col-sm-6">
                                    <input type="number" name="Attendence" class="form-control" id="Attendence" value="@ViewBag.Mark.Attendence" required="required" autocomplete="off">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="default" class="col-sm-2 control-label">Assignment</label>
                                <div class="col-sm-6">
                                    <input type="number" name="Assignment" class="form-control" id="Assignment" value="@ViewBag.Mark.Assignment" required="required" autocomplete="off">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="default" class="col-sm-2 control-label">Final</label>
                                <div class="col-sm-6">
                                    <input type="number" name="Final" class="form-control" id="Final" value="@ViewBag.Mark.Final" required="required" autocomplete="off">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" name="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>
                    }
                    
                    @if (ViewBag.Message != null)
                    {
                        <p>@ViewBag.Message</p>
                    }

                </div>
            </div>
        </div>
        <!-- /.col-md-12 -->
    </div>
</div>